datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Opportunity {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Lead {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Contact {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Customer {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  orders    Order[]
  updatedAt DateTime @updatedAt
}

model Product {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  note        String?
  orders      Order[]
  updatedAt   DateTime @updatedAt
}

model Order {
  createdAt   DateTime  @default(now())
  customer    Customer? @relation(fields: [customerId], references: [id])
  customerId  String?
  id          String    @id @default(cuid())
  orderDate   DateTime?
  productId   Product?  @relation(fields: [productIdId], references: [id])
  productIdId String?
  total       Decimal?
  updatedAt   DateTime  @updatedAt
}
